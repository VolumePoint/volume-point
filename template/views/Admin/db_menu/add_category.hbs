    <br />
    <form action="/admin/add_category" method="post" enctype="multipart/form-data">
        <div  class="register-form add_category" >
            <div class="form">
                <div class="form-content">
                    <div class="row">
                        <div class="col-md-6">                            
                                <div class="form-group">
                                    <input type="text"  class="form-control" placeholder="Category Name *" required
                                        name="cat_name" />
                                </div>
                                <div class="form-group">
                                    <input type="text" class="form-control" placeholder="Description *" required name="description" />
                                </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <input type="file" class="form-control" style="margin-top: 3px;" required name="cat_image">
                            </div>
                        </div>

                        <input type="submit" style="margin-left: 20px;" class="btnSubmit" value="Add">
                    </div>
                    
                </div>
            </div>
        </div>
    </form>

            {{!-- <h4 style="margin-left: 150px;"> <b> Newly added </b> </h4> --}}
            <br> <br>
            <div class="carousel-inner">
                
                <div class="carousel-item active">
                    <div class="container">
                        <div class="row">
                            {{#each data.records}}
                                {{#if this.available}}
                                    <div class="col-md-3">
                                        <div class="product-list">
                                            <div class="product-item">
                                                <a href="/book_details/?book_id={{book_id}}"><img src="../../book/{{book_image}}" alt="" /></a>            
                                                <h3>{{title}}</h3>
                                                <span>Rs.{{price}}</span>
                                                <ul>
                                                    <li><a href="/buy_book/?book_id={{book_id}}">Buy Now</a></li>
                                                    <li><a href="/add_to_cart/?book_id={{book_id}}">Add to Cart</a></li>
                                                </ul>
                                            </div>
                                        </div>
                                    </div>
                                {{/if}}
                            {{/each}}
                            <tr>
                                <td>
                                    {{#if data.records}}
                                    {{else}}
                                    <div class="heading_container heading_center">
                                        <br> <br>
                                        <center>
                                            <h2>No records found</h2>
                                        </center>
                                    </div>
                                    {{/if}}
                                </td>
                            </tr>
                        </div>
                    </div>
                </div>
            </div>

            <a href="/add_book" class="registerbtn registerbtn2">Sell Book</a>
            
            <!-- Slider buttons -->
            <br>
            <div class="carousel_btn_box" style="margin-left: 150px;justify-content:space-between;">
                {{#if data.prevPage}}
                <a class="carousel-control-prev" href="/book?page={{data.prevPage}}" role="button" data-slide="prev">
                    <i class="fa fa-angle-left" aria-hidden="true"></i>
                    <span class="sr-only">Previous</span>
                </a>
                {{/if}}
                {{#if data.records}}
                <a class="carousel-control-next" href="/book?page={{data.nextPage}}" role="button" data-slide="next">
                    <i class="fa fa-angle-right" aria-hidden="true"></i>
                    <span class="sr-only">Next</span>
                </a>
                {{/if}}
            </div>
        </div>
    </section>
